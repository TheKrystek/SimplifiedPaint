<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">

    <!-- derive from Light or Dark theme-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- specify the accent color (optional) -->
    <Color x:Key="BackgroundColor">#232323</Color>
    <Color x:Key="BorderColor">#cccccc</Color>
    <Color x:Key="AccentColor">#00ABA9</Color>

    <SolidColorBrush x:Key="AccentColorBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderColorBrush" Color="{DynamicResource BorderColor}"/>
    <SolidColorBrush x:Key="BackgroundColorBrush" Color="{DynamicResource BacgroundColor}"/>

    <!-- custom theme resources-->
    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle.Fill>
            <SolidColorBrush Color="{DynamicResource BackgroundColor}"></SolidColorBrush>
        </Rectangle.Fill>
    </Rectangle>
</ResourceDictionary>