<UserControl x:Class="InternetCrawlerGUI.Pages.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetCrawlerGUI.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="1"/>
        <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource BorderColorBrush}" Margin="0,0,4,0">
            <WrapPanel   >
                <Button Click="Button_Click_1" />
            </WrapPanel>
        </Border>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <InkCanvas  Background="#ededed" Name="paintArea" Grid.Column="0" Grid.Row="0" />
            <GridSplitter ToolTip="test" Grid.Row="0" Grid.Column="1" Margin="2,0,2,0" Width="2" Background="{DynamicResource BorderColorBrush}" VerticalAlignment="Stretch" HorizontalAlignment="Center" />
            <GridSplitter Grid.Row="1" Grid.Column="0" Margin="0,2,0,2" Height="2" Background="{DynamicResource BorderColorBrush}" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
        </Grid>
        <WrapPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>


</UserControl>
