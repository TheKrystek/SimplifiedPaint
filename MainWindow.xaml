<mui:ModernWindow x:Class="SimplifiedPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="pl"
        lex:ResxLocalizationProvider.DefaultAssembly="SimplifiedPaint"
        lex:ResxLocalizationProvider.DefaultDictionary="Resources"
        Title="SimplifiedPaint" 
        Icon="Resources/logo.ico"
        WindowStartupLocation="CenterScreen"
                  ContentSource="/Pages/Main.xaml"   >
    <mui:ModernWindow.TitleLinks>

        <mui:Link DisplayName="help" Source="http://mui.codeplex.com" />
    </mui:ModernWindow.TitleLinks>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="{lex:Loc AppTitle}" >
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Steps" Source="/Pages/Main.xaml" />
                <mui:Link DisplayName="settings" Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>


</mui:ModernWindow>
